		fileHandle = io.open("/LyqydOS/"..file, "w")
		if fileHandle then
			fileHandle:write(remoteHandle.readAll())
			fileHandle:close()
		else
			printError("Could not open file /LyqydOS/"..file)
		end
	else
		printError("Could not retrieve remote file: "..file)
	end
end
